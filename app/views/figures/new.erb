<form method="post" action="/figures">
<p>Name: <input type="text" name="figure[name]" id="figure_name"></p>

<h3>Titles</h3>

<% @titles.each do |title| %>
<p><%= title.name %> <input type="checkbox" name="figure[title_ids][]" value ="<%=title.id%>" id="title_<%=title.id%>"></p>
<% end %>

<h3>Create New Title:</h3>
<input type="text" name="title[name]" id="new_title">


<h3>Landmarks</h3>
<% @landmarks.each do |landmark| %>
<p><%= landmark.name %> <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"></p>
<% end %>

<h3>Create New Landmark:</h3>
<p>
  Name:<input type="text" name="landmark[name]" id="new_landmark">
  Year:<input type="text" name="landmark[year_completed]" id="new_landmark_year">
</p>

<input type="submit" id="submit" value="Create New Figure">
</form>
